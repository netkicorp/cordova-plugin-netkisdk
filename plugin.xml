<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-netkisdk" 
      version="1.0.0" 
      xmlns="http://apache.org/cordova/ns/plugins/1.0" 
      xmlns:android="http://schemas.android.com/apk/res/android" 
      xmlns:rim="http://www.blackberry.com/ns/widgets">
   <name>NetkiSDK</name>
   <description>Cordova NetkiSDK Plugin</description>
   <license>Apache 2.0</license>
   <keywords>cordova,netkisdk</keywords>
   <repo />
   <issue />
   <js-module name="netkisdk" src="www/netkisdk.js">
   <clobbers target="netkisdk" />
   </js-module>
   <platform name="android">
      <config-file parent="/*" target="res/xml/config.xml">
      <feature name="NetkiSDK">
         <param name="android-package" value="com.netki.NetkiSDK" />
      </feature>
      </config-file>
         <source-file src="src/android/NetkiSDK.java" target-dir="src/com/netki" />
   </platform>
   <platform name="ios">
      <config-file parent="/*" target="config.xml">
         <feature name="NetkiSDK">
            <param name="ios-package" value="NetkiSDK" />
         </feature>
         <preference name="deployment-target" value="12.0" />
      </config-file>
      <source-file src="src/ios/NetkiSDK.m" />
      <podspec>
         <config ios-min-version="9.0">
            <source url="https://github.com/CocoaPods/Specs.git"/>
         </config>
         <pods use-frameworks="true">                
            <pod name="NetkiSDK" git="https://valentin-netki@bitbucket.org/eimai/ios-pod.git" branch="development"/>
         </pods>
      </podspec>
   </platform>
</plugin>